@model IEnumerable<JobApplication>

@{
    ViewData["Title"] = "Job applications";
    var userRole = User.GetRole();
}

<div class="row page-box">
    <div class="col-sm-12">
        <div class="table-title">
            <div class="row">
                <div class="col-12 col-md-4 d-flex align-items-center py-2">
                    <h3 class="font-weight-bold mb-0">
                        List of @(userRole == "User" ? "your" : "") applications
                    </h3>
                    <div>
                        <span data-bind="text: viewModel.count()" class="badge badge-pill badge-primary align-top" />
                    </div>
                </div>
                <div class="col-12 col-md-4 py-2">
                    @using (Html.BeginForm("Index", "JobOffers", FormMethod.Get, new { id = "searchForm" }))
                    {
                        <div class="input-group search-input">
                            <input id="searchInput"
                                   name="search"
                                   type="text"
                                   class="form-control"
                                   placeholder="Search by offer title.."
                                   aria-label="Search by offer title"
                                   aria-describedby="button-search">
                            <div class="input-group-append">
                                <button id="button-search"
                                        class="btn btn-primary"
                                        type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    @if (userRole == "Admin")
                    {
                        <th>
                            Applicant name
                        </th>
                    }
                    <th>
                        Application for
                    </th>
                    <th>
                        Company
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody id="tableContent">
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <div id="loadingSpinner" class="spinner-border" role="status"> <span class="sr-only"> Loading... </span> </div>
        </div>
    </div>
</div>


@section Scripts {
    <environment include="Development">
        <script src="~/js/applications-index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="@Environment.GetEnvironmentVariable("CloudFrontDomain")/js/applications-index.js"></script>
    </environment>

}
