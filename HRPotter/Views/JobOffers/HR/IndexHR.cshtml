@{
    ViewData["Title"] = "Job offers list";
}

<div class="row page-box">
    <div class="col-sm-12">
        <div class="table-title">
            <div class="row">
                <div class="col-12 col-md-4 d-flex align-items-center py-2">
                    <h3 class="font-weight-bold mb-0">
                        Your job offers list
                    </h3>
                    <div>
                        <span data-bind="text: viewModel.count()" class="badge badge-pill badge-primary align-top" />
                    </div>
                </div>

                <div class="col-12 col-md-4 py-2">
                    @using (Html.BeginForm("Index", "JobOffers", FormMethod.Get, new { id = "searchForm" }))
                    {
                        <div class="input-group search-input">
                            <input id="searchInput"
                                   name="search"
                                   type="text"
                                   class="form-control"
                                   placeholder="Search by offer title.."
                                   aria-label="Search by offer title"
                                   aria-describedby="button-search">
                            <div class="input-group-append">
                                <button id="button-search"
                                        class="btn btn-primary"
                                        type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-12 col-sm-4 text-right py-2">
                    <a asp-action="Create" class="btn btn-outline-primary">
                        <i class="fa fa-plus pr-3"></i>
                        Add job offer
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Job Title</th>
                    <th scope="col">Company</th>
                    <th scope="col">Location</th>
                    <th scope="col">Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tableContent">
            </tbody>
        </table>

        <nav id="pagingContent" aria-label="offers-navigation"></nav>

        <div class="d-flex justify-content-center">
            <div id="loadingSpinner" class="spinner-border" role="status"> <span class="sr-only"> Loading... </span> </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/offersIndex.js"></script>
}